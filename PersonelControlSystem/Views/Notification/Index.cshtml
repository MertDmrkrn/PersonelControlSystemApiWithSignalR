@model List<PersonelControlSystem.Dtos.NotificationDto.ResultNotificationDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">Striped Table with Hover</h4>
                        <p class="card-category">Here is a subtitle for this table</p>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>#</th>
                            <th>Duyuru Başlığı</th>
                            <th>Resim</th>
                            <th>Duyuru Açıklaması</th>
                            <th>Duyuru Tarihi</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NotificationID</td>
                                        <td>@item.NotificationTitle</td>
                                        <td>@item.ImgUrl</td>
                                        <td>@item.NotificationDescription</td>
                                        <td>@item.NotificationDate</td>
                                        <td><a href="/Notification/DeleteNotification/@item.NotificationID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Notification/UpdateNotification/@item.NotificationID" class="btn btn-info">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <a href="/Notification/CreateNotification/" class="btn btn-primary">Duyuru Ekle</a>
            </div>
        </div>
    </div>
</div>
