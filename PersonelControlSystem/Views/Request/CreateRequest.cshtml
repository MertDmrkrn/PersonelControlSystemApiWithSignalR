@model PersonelControlSystem.Dtos.RequestDto.CreateRequestDto
@{
    ViewData["Title"] = "CreateRequest";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İstek Ekleme İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İstek Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="requesttitle">İstek Başlığı Giriniz</label>
								<input type="text" class="form-control" id="requesttitle" asp-for="RequestTitle" placeholder="İstek Başlığı">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="requestdescription">İçeriği Giriniz</label>
								<input type="text" class="form-control" id="requestdescription" asp-for="RequestDescription" placeholder="İçerik">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="requestdate">Tarih Giriniz</label>
								<input type="date" class="form-control" id="requestdate" asp-for="RequestDate" placeholder="Tarih">
							</div>
						</div>

					</div>
					<div class="card-action">
						<button class="btn btn-primary">İstek Ekle</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

